<p id="notice"><%= notice %></p>
  <div class="p-3 mb-2 bg-light text-dark">
    <nav class="navbar navbar-light bg-light">
  <div class="container-fluid">
  <h1 class="text-dark">Homework</h1>
  </nav>
  <%= form_tag homeworks_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "search"%>
       <% end %>
  
<h5><%= render 'navigation'%></h5>
<center>
<table class="table table-dark">
  <thead>
    <tr>
      <th>Homework name</th>
      <th>Category</th>
      <th>Deadline</th>
      <th>Description</th>
      <th>User<th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @homeworks.each do |homework| %>
      <tr>
        <td><h6><%= homework.homework_name %></h6></td>
        <td><h6><%= homework.category.try (:name)%></h6></td>
        <td><h6><%= homework.deadline %></h6></td>
        <td><h6><%= homework.description %></h6></td>
        <td><h6><%= homework.created_by.try(:email) %></h6></td>
        <td ><h6><%= link_to 'Show', homework %></h6></td><br>
        <td></td>
        <td ><h6><%= link_to 'Edit', edit_homework_path(homework) %></h6></td>
       <td><h6><%= button_to 'Destroy', homework, method: :delete, data: { confirm: 'Are you sure?' } %></h5></td>
      </tr>
    <% end %>
     <div class="btn btn-primary ">
    <%= link_to 'New Homework', new_homework_path %> 
</div>
  </tbody>
</table>
</div>

